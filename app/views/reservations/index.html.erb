<h1>Listing reservations</h1>

<table>
  <thead>
    <tr>
      <th>Res date</th>
      <th>Res time</th>
      <th>Restoraunt</th>
      <th>Pers count</th>
      <th>Cont email</th>
      <th>Cont name</th>
      <th>Cont phone</th>
      <th>Cont message</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.res_date %></td>
        <td><%= reservation.res_time %></td>
        <td><%= reservation.restoraunt %></td>
        <td><%= reservation.pers_count %></td>
        <td><%= reservation.cont_email %></td>
        <td><%= reservation.cont_name %></td>
        <td><%= reservation.cont_phone %></td>
        <td><%= reservation.cont_message %></td>
        <td><%= reservation.user %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reservation', new_reservation_path %>
